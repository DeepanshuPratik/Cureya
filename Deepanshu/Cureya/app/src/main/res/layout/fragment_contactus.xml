<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/header_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageButton
                android:id="@+id/dashboard_back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|start"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="Back Button"
                app:srcCompat="@drawable/asset_back" />

            <TextView
                android:id="@+id/community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:padding="8dp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_gravity="top|center_horizontal"
                android:text="Contact Us"
                />
        </FrameLayout>
        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:paddingTop="80dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/cureya_logo" />
        <TextView
            android:id="@+id/contact_edit"
            app:layout_constraintTop_toBottomOf="@id/company_logo"
            android:text="Contact Us"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/welcome_message_2"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_edit"
            android:textSize="18sp"
            android:text="We are happy to help you"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/mail_id"
            app:layout_constraintTop_toBottomOf="@id/welcome_message_2"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/frame326"
            />
        <TextView
            android:id="@+id/follow"
            app:layout_constraintTop_toBottomOf="@id/mail_id"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Follow us on"
            />
        <LinearLayout
            android:id="@+id/social_medias"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/follow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/instagram"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram"
                />
            <ImageView
                android:id="@+id/youtube"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logos_youtube"
                />
            <ImageView
                android:id="@+id/facebook"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook"
                />
            <ImageView
                android:id="@+id/twitter"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                />
            <ImageView
                android:id="@+id/linkedIn"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linkedin"
                />

        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:background="#6ED4FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/social_medias"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask Your Queries"
                android:textAlignment="center"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColor="@color/text_secondary"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/bg_details"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:textColor="@color/text_secondary"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/bg_details"
                />
            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:textColor="@color/text_secondary"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/bg_details"
                />
            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                android:gravity="top"
                android:textColor="@color/text_secondary"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:lines="5"
                android:background="@drawable/bg_details"
                />
            <Button
                android:id="@+id/send_message"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Button"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
