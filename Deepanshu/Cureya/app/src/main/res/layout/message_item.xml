<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sender_message_background"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="14dp"
        android:textSize="14sp"
        tools:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit. Est dui, tincidunt ut morbi." />

    <TextView
        android:id="@+id/receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receiver_message_background"
        android:maxWidth="200dp"
        android:padding="14dp"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit. Est dui, tincidunt ut morbi." />

</RelativeLayout>